<div class="container container-resp p-4">
    <div class="card text-center">
        <div class="card-body">
            <div class="form-header pl-5">
                <div class="form-header-title">
                    <div>
                        <i class="fas fa-boxes mr-2" style="font-size: 20px;"></i>
                    </div>
                    <h3 class="title">Maitenance staff</h3>
                </div>
            </div>
            <form class="form-body" action="/product/add" method="POST">
                <div class="marginRow">
                    <div class="form-group col d-flex justify-content-center">
                        <input class="form-control" type="text" name="product_code" autocomplete="off" required>
                        <label class="placeholder">Id product</label>
                    </div>
                    <div class="form-group col d-flex justify-content-center">
                        <input class="form-control" type="text" name="name" autocomplete="off" required>
                        <label class="placeholder">Name</label>
                    </div>
                </div>
                <div class="marginRow">
                    <div class="form-group col d-flex justify-content-center">
                        <input class="form-control" type="text" class="form-control" value="0" readonly>
                        <label class="placeholder">Current stock</label>
                    </div>
                    <div class="form-group col d-flex justify-content-center">
                        <input class="form-control" type="number" name="critical_stock" min="0" value="0" step="1" autocomplete="off" required>
                        <label class="placeholder">Critical stock</label>
                    </div>
                </div>
                <div class="marginRow">
                    <div class="form-group col d-flex justify-content-center">
                        <select class="form-control" size="1" name="ptype" id="" required>
                            <option value="" hidden></option>
                            {{#each ptype}}
                            <option value="{{ptype_id}}">{{name}}</option>
                            {{/each}}
                        </select>
                        <label class="placeholder">Product type</label>
                    </div>
                </div>
                <div class="marginRow">
                    <div class="form-group col d-flex justify-content-center">
                        <a class="btn btn-danger btn-block" href="/product">Cancel</a>
                    </div>
                    <div class="form-group col d-flex justify-content-center">
                        <input type="submit" class="btn btn-primary btn-block" value="Accept">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>