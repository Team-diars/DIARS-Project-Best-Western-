<div class="container p-4">
    <div class="row">
        <div class="col-md">
            <div class="card text-center">
                <div class="card-body p-4">
                    <div class="row mx-auto form-header">
                        <div class="form-header-title">
                            <div>
                                <i class="fa fa-users mr-2" aria-hidden="true"></i>
                            </div>
                            <h4>Maitenance staff</h4>
                        </div>
                        <a class="btn btn-success" href="worker/add">
                            <i class="fa fa-plus mr-1" aria-hidden="true"></i>Add
                        </a>
                    </div>
                    <div class="row mx-auto mt-2">
                        <input class="form-control" type="text" placeholder="Filter by any attribute">
                    </div>
                    <div class="row mx-auto mt-2">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Id worker</th>
                                    <th scope="col">SSN</th>
                                    <th scope="col">Full name</th>
                                    <th scope="col">Job position</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each worker}}
                                <tr>
                                    <th scope="row">{{index @index }}</th>
                                    <td>{{worker_code}}</td>
                                    <td>{{ssn}}</td>
                                    <td>{{name}} {{lastname}}</td>
                                    <td>{{jobpos}}</td>
                                    <td>
                                        <a href="worker/view/{{worker_id}}">
                                            <button type="button" class="btn btn-secondary">
                                                <i class="fa fa-eye" aria-hidden="true"></i>
                                            </button>
                                        </a>
                                        <a href="worker/edit/{{worker_id}}">
                                            <button type="button" class="btn btn-primary">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                        </a>
                                        <a href="worker/delete/{{worker_id}}">
                                            <button type="button" class="btn btn-danger">
                                                <i class="fa fa-trash" aria-hidden="true"></i>

                                            </button>
                                        </a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>