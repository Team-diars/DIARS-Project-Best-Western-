<div class="container container-resp">
    <div class="card text-center">
        <div class="card-body">
            <div class="form-header pl-5">
                <div class="form-header-title">
                    <div>
                        <i class="fa fa-users mr-2" aria-hidden="true" style="font-size: 20px;"></i>
                    </div>
                    <h3 class="title">Maitenance staff</h3>
                </div>
            </div>
            <form class="form-body" action="/worker/add" method="POST">
                <div class="marginRow">
                    <div class="form-group col d-flex justify-content-center">
                        <input class="form-control" type="text" name="name" autocomplete="off" required>
                        <label class="placeholder">First name</label>
                    </div>
                    <div class="form-group col d-flex justify-content-center">
                        <input class="form-control" type="text" name="lastname" autocomplete="off" required>
                        <label class="placeholder">Last name</label>
                    </div>
                </div>
                <div class="marginRow">
                    <div class="form-group col d-flex justify-content-center">
                        <input class="form-control" type="text" name="worker_code" autocomplete="off" required>
                        <label class="placeholder">Worker id</label>
                    </div>
                    <div class="form-group col d-flex justify-content-center">
                        <input class="form-control" type="text" name="ssn" autocomplete="off" required>
                        <label class="placeholder">SSN</label>
                    </div>
                </div>
                <div class="marginRow">
                    <div class="form-group col d-flex justify-content-center">
                        <select class="form-control" size="1" name="state" id="select-state" required>
                            <option value="" hidden></option>
                        </select>
                        <label class="placeholder">State</label>
                    </div>
                    <div class="form-group col d-flex justify-content-center">
                        <select class="form-control" size="1" name="city" id="select-city" required>
                            <option value="" hidden></option>
                        </select>
                        <label class="placeholder">City</label>
                    </div>
                </div>
                <div class="marginRow">
                    <div class="form-group col d-flex justify-content-center">
                        <input class="form-control" type="text" name="address" autocomplete="off" required>
                        <label class="placeholder">Address</label>
                    </div>
                    <div class="form-group col d-flex justify-content-center">
                        <input class="form-control" type="email" name="email" autocomplete="off">
                        <label class="placeholder">E-mail</label>
                    </div>
                </div>
                <div class="marginRow">
                    <div class="form-group col d-flex justify-content-center">
                        <input class="form-control" type="text" name="phone" autocomplete="off">
                        <label class="placeholder">Phone</label>

                    </div>
                    <div class="form-group col d-flex justify-content-center">
                        <input class="form-control" type="text" name="cellphone" autocomplete="off">
                        <label class="placeholder">Cellphone</label>
                    </div>
                </div>
                <div class="marginRow">
                    <div class="form-group col d-flex justify-content-center">
                        <select class="form-control" size="1" name="jobpos" id="jobpos" required>
                            <option value="" hidden></option>
                            {{#each jobpos}}
                                <option value="{{jobpos_id}}">{{jobpos}}</option>
                            {{/each}}
                        </select>
                        <label class="placeholder">Job position</label>
                    </div>
                </div>
                <div class="marginRow">
                    <div class="form-group col d-flex justify-content-center">
                        <a class="btn btn-danger btn-block" href="/worker">Cancel</a>
                    </div>
                    <div class="form-group col d-flex justify-content-center">
                        <input type="submit" class="btn btn-primary btn-block" value="Accept">
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>