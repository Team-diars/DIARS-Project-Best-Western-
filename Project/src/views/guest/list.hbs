<div class="container p-4">
    <div class="row">
        <div class="col-md">
            <div class="card text-center">
                <div class="card-body p-4">
                    <div class="row mx-auto form-header">
                        <div class="form-header-title">
                            <div>
                                <i class="fa fa-user mr-2" aria-hidden="true"></i>
                            </div>
                            <h4>Maitenance guest</h4>
                        </div>
                        <a class="btn btn-success" href="guest/add">
                            <i class="fa fa-plus mr-1" aria-hidden="true"></i>Add
                        </a>
                    </div>
                    <div class="row mx-auto mt-2">
                        <input class="form-control" type="text" placeholder="Filter by any attribute">
                    </div>
                    <div class="row mx-auto mt-2 table-fixed table-fixed-2">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Fullname</th>
                                    <th scope="col">Doc type</th>
                                    <th scope="col">Doc number</th>
                                    <th scope="col">Phone</th>
                                    <th scope="col">E-mail</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each guest}}
                                <tr>

                                    <th scope="row">{{index @index }}</th>
                                    <td>{{firstname}} {{lastname}}</td>
                                    <td>{{doctype}}</td>
                                    <td>{{docnumber}}</td>
                                    <td>{{phone}}</td>
                                    <td>{{email}}</td>
                                    <td>
                                        <a href="/guest/view/{{guest_id}}">
                                            <button type="button" class="btn btn-secondary">
                                                <i class="fa fa-eye" aria-hidden="true"></i>
                                            </button>
                                        </a>
                                        <a href="/guest/edit/{{guest_id}}">
                                            <button type="button" class="btn btn-primary">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                        </a>
                                        <a class="confirm-btn" href="/guest/delete/{{guest_id}}"
                                            onclick="return confirm('Are you sure?')">
                                            <button type="button" class="btn btn-danger">
                                                <i class="fa fa-trash" aria-hidden="true"></i>
                                            </button>
                                        </a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>